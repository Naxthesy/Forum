@model Forum.ViewModels.Account.LogRegViewModel
@if (Model.loginView != null)
{
    <div class="container">
        <div class="row">
            <div class="col-md-6 col-md-offset-3">
                <div class="panel panel-login">
                    <div class="panel-heading">
                        <div class="row">
                            <div class="col-xs-6">
                                <a href="#" class="active" id="login-form-link">Login</a>
                            </div>
                            <div class="col-xs-6">
                                <a href="#" id="register-form-link">Register</a>
                            </div>
                        </div>
                        <hr>
                    </div>
                    <div class="panel-body">
                        <div class="row">
                            <div class="col-lg-12">
                                <form id="login-form" asp-action="Login" asp-controller="Account" method="post" role="form" style="display: block;">
                                    <div class="form-group">
                                        <input type="text" asp-for="loginView.Email" id="username" tabindex="1" class="form-control" placeholder="Email" value="@Model.loginView.Email">
                                        <span asp-validation-for="loginView.Email" class="text-danger" style="display:block;"></span>
                                    </div>
                                    <div class="form-group">
                                        <input type="password" asp-for="loginView.Password" id="password" tabindex="2" class="form-control" placeholder="Password" value="@Model.loginView.Password">
                                        <span asp-validation-for="loginView.Password" class="text-danger" style="display:block;"></span>
                                    </div>
                                    <div class="form-group text-center">
                                        <input asp-for="loginView.RememberMe" type="checkbox" tabindex="3" class="" name="remember" id="remember">
                                        <label for="remember"> Remember Me</label>
                                    </div>
                                    <div class="form-group">
                                        <div class="row">
                                            <div class="col-sm-6 col-sm-offset-3">
                                                <input type="submit" name="login-submit" id="login-submit" tabindex="4" class="form-control btn btn-login" value="Log In">
                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <div class="row">
                                            <div class="col-lg-12">
                                                <div class="text-center">
                                                    <a href="https://phpoll.com/recover" tabindex="5" class="forgot-password">Forgot Password?</a>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </form>
                                <form id="register-form" asp-action="Login" asp-controller="Account" method="post" role="form" style="display: none;">
                                    <div class="form-group">
                                        <input type="text" asp-for="registerView.Email" id="username" tabindex="1" class="form-control" placeholder="Email">
                                        <span asp-validation-for="registerView.Email" class="text-danger" style="display:block;"></span>
                                    </div>

                                    <div class="form-group">
                                        <input type="password" asp-for="registerView.Password" id="password" tabindex="2" class="form-control" placeholder="Password">
                                        <span asp-validation-for="registerView.Password" class="text-danger" style="display:block;"></span>

                                    </div>
                                    <div class="form-group">
                                        <input type="password" asp-for="registerView.PasswordConfirm" id="confirm-password" tabindex="2" class="form-control" placeholder="Confirm Password">
                                        <span asp-validation-for="registerView.PasswordConfirm" class="text-danger" style="display:block;"></span>

                                    </div>
                                    <div class="form-group">
                                        <div class="row">
                                            <div class="col-sm-6 col-sm-offset-3">
                                                <input type="submit" name="register-submit" id="register-submit" tabindex="4" class="form-control btn btn-register" value="Register Now">
                                            </div>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
